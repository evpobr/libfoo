root = true

[*]
charset = utf-8

[*.{h,c}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[{CMake*.txt,*.cmake}]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
